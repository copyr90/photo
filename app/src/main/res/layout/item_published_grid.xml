<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_grida_image"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:background="#eeeeee"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_camera_click"
        />

    <ImageView
        android:id="@+id/icon_img_selected"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignBottom="@id/item_grida_image"
        android:layout_alignRight="@id/item_grida_image"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/icon_img_selected"/>

</RelativeLayout>